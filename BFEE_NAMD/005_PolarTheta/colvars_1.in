colvarsTrajFrequency      5000
colvarsRestartFrequency   5000
indexFile                 ../complex.ndx
colvar {
    name RMSD
    rmsd {
        atoms {
            indexGroup  ligand
        }
        refpositionsfile  ../complex.xyz
    }
}
colvar {
    name eulerTheta
    customFunction asin(2 * (q1*q3-q4*q2)) * 180 / 3.1415926
    Orientation {
        name  q
        atoms {
            indexGroup  ligand
            centerReference    on
            rotateReference    on
	        enableFitGradients no
            fittingGroup {
                indexGroup  protein
            }
            refpositionsfile  ../complex.xyz
         }
         refpositionsfile  ../complex.xyz
    }
}
colvar {
    name eulerPhi
    customFunction atan2(2*(q1*q2+q3*q4), 1-2*(q2*q2+q3*q3)) * 180 / 3.1415926
    Orientation {
        name  q
        atoms {
            indexGroup  ligand
            centerReference    on
            rotateReference    on
	        enableFitGradients no
            fittingGroup {
                indexGroup  protein
            }
            refpositionsfile  ../complex.xyz
         }
         refpositionsfile  ../complex.xyz
    }
}
colvar {
    name eulerPsi
    customFunction atan2(2*(q1*q4+q2*q3), 1-2*(q3*q3+q4*q4)) * 180 / 3.1415926
    Orientation {
        name  q
        atoms {
            indexGroup  ligand
            centerReference    on
            rotateReference    on
	        enableFitGradients no
            fittingGroup {
                indexGroup  protein
            }
            refpositionsfile  ../complex.xyz
         }
         refpositionsfile  ../complex.xyz
    }
}
colvar {
    name polarTheta
    customFunction acos(-i2) * 180 / 3.1415926
    width 1
    lowerboundary 52.0
    upperboundary 72.0
    subtractAppliedForce on
    expandboundaries  on
    extendedLagrangian on
    extendedFluctuation 1
    distanceDir {
        name  i
        group1 {
            indexGroup  reference
            centerReference    on
            rotateReference    on
            enableFitGradients no
            fittingGroup {
                indexGroup  protein
            }
            refpositionsfile  ../complex.xyz
        }
        group2 {
            indexGroup  ligand
            centerReference    on
            rotateReference    on
            enableFitGradients no
            fittingGroup {
                indexGroup  protein
            }
            refpositionsfile  ../complex.xyz
        }
    }
}
abf {
    colvars        polarTheta
    FullSamples    10000
    historyfreq    50000
    writeCZARwindowFile
}
metadynamics {
    colvars           polarTheta
    hillWidth         3.0
    hillWeight        0.05
    wellTempered      on
    biasTemperature   4000
}
harmonicWalls {
    colvars           polarTheta
    lowerWalls        52.0
    upperWalls        72.0
    lowerWallConstant 0.2
    upperWallConstant 0.2
}
harmonic {
    colvars         RMSD
    forceConstant   10.0
    centers         0.0
}
harmonic {
    colvars         eulerTheta
    forceConstant   0.1
    centers         1.0
}
harmonic {
    colvars         eulerPhi
    forceConstant   0.1
    centers         -10
}
harmonic {
    colvars         eulerPsi
    forceConstant   0.1
    centers         10
}
colvar {
  name translation
  distance {
    group1 {
      indexGroup  protein
    }
    group2 {
      dummyAtom (2.4947330951690674, -0.6632679104804993, -2.2046539783477783)
    }
  }
}
harmonic {
  colvars       translation
  centers       0.0
  forceConstant 100.0
}

colvar {
  name orientation
  orientation {
    atoms {
      indexGroup  protein
    }
    refPositionsFile   ../complex.xyz
  }
}
harmonic {
  colvars       orientation
  centers       (1.0, 0.0, 0.0, 0.0)
  forceConstant 2000.0
}
